<section class="wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h3 class="page-header">
      </h3>
      <ol class="breadcrumb">
        <li><i class="fa fa-home mx-2"></i>Home</li>
        <li><i class="fa fa-laptop me-2"></i>Projetos</li>
        <%= link_to new_project_path do %>
          <li class="btn btn-outline-success ms-3"><i class="fa fa-plus me-2 text-success"></i>Novo projeto</li>
        <% end %>
      </ol>
    </div>
  </div>
  <%=  render 'layouts/messages' %>
  <table class="table table-hover text-dark mb-0 bg-white table-striped">
    <thead>
      <tr>
        <th>Nome do Projeto</th>
        <th>Data de Inicio</th>
        <th>Data de Termino</th>
        <th>%Completo</th>
        <th>Atrasado?</th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td>
            <%= link_to project.name, project, class: "text-decoration-none" %>
          </td>
          <td>
            <%= project.start_date.strftime("%d-%m-%Y") %>
          </td>
          <td>
            <%= project.end_date.strftime("%d-%m-%Y") %>
          </td>
          <td>
            <% if project.activities.count > 0 %>
              <%=  project.porcentage  %>%
            <% else %>
              0%
            <% end %>
          </td>
          <td>
            <%= project.late? ? "Sim" : "NÃ£o" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
