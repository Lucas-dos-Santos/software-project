<section class="wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h3 class="page-header">
      </h3>
      <ol class="breadcrumb">
        <li><i class="fa fa-home mx-2"></i>Home</li>
        <li><i class="fa fa-laptop me-2"></i>Atividades</li>
        <%= link_to new_activity_path do %>
          <li class="btn btn-outline-success ms-3 btn-lg"><i class="fa fa-plus me-2 text-success"></i>Nova atividade</li>
        <% end %>
      </ol>
    </div>
  </div>
  <%=  render 'layouts/messages' %>
  <table class="table table-hover text-dark mb-0 bg-white table-striped">
    <thead>
      <tr>
        <th>Nome do Atividade</th>
        <th>Data de Inicio</th>
        <th>Data de Termino</th>
        <th>Finalizada?</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @activities.each do |activity| %>
        <tr>
          <td>
            <%= link_to activity.project, class: "text-dark" do %>
              <i class="fa fa-eye text-primary mx-2"></i>
              <%= activity.name_activity %>
            <% end %>
          </td>
          <td><%= activity.start_date.strftime("%d-%m-%Y")  %></td>
          <td><%= activity.end_date.strftime("%d-%m-%Y") %></td>
          <td>
            <%= activity.finished ? "Sim" : "NÃ£o" %>
          </td>
          <td>
            <%= link_to  activity_path(activity), method: :put do %>
              <i class="fa fa-exchange-alt mx-3 fs-3"></i>
            <% end %>
            <%= link_to activity, method: :delete, data: {confirm: "Tem certeza?"} do %>
              <i class="fa fa-window-close text-danger fs-3"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
