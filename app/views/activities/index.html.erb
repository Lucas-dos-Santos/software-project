<section class="wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h3 class="page-header">
      </h3>
      <ol class="breadcrumb">
        <li><i class="fa fa-home mx-2"></i>Home</li>
        <li><i class="fa fa-laptop me-2"></i>Dashboard</li>
      </ol>
    </div>
  </div>
  <p id="notice"><%= notice %></p>
  <h1>Activities</h1>
  <table>
    <thead>
      <tr>
        <th>Id project</th>
        <th>Name activity</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Finished</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @activities.each do |activity| %>
        <tr>
          <td><%= activity.project_id %></td>
          <td><%= activity.name_activity %></td>
          <td><%= activity.start_date.strftime("%d-%m-%Y")  %></td>
          <td><%= activity.end_date.strftime("%d-%m-%Y")  %></td>
          <td><%= activity.finished %></td>
          <td><%= link_to 'Show', activity %></td>
          <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
          <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Activity', new_activity_path %>
