<%= form_with(model: activity) do |form| %>
  <div class="row">
    <div class="col-6">
      <%= render 'shared/errors', obj: activity %>
      <div class="col-6 fs-3">
        <%= form.label :project_id, class: "form-label" %>
        <%= form.collection_select :project_id, @projects, :id, :name, {}, class: "form-select fs-3 mb-3" %>
      </div>
      <div class="col-6 fs-3">
        <%= form.label :name_activity, class: "form-label" %>
        <%= form.text_field :name_activity, class: "form-control mb-3 fs-3" %>
      </div>
      <div class="col-6 fs-3">
        <%= form.label :start_date, class: "form-label" %>
        <%= form.date_field :start_date, class: "form-control mb-3 fs-3" %>
      </div>
      <div class="col-6 fs-3">
        <%= form.label :end_date, class: "form-label" %>
        <%= form.date_field :end_date, class: "form-control mb-3 fs-3" %>
      </div>
      <div class="text-center col-6">
        <%= form.submit class: "btn btn-primary fs-4" %>
      </div>
    </div>
  </div>
<% end %>
